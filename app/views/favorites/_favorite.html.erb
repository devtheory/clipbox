<div class="favorite">
  <% if favorite = current_user.favorited(bookmark) %>
    <%= link_to [topic, bookmark, favorite], class: 'btn btn-primary', method: :delete do %>
      <i class="glyphicon glyphicon-star"> </i>&nbsp; Favorited
    <% end %>
  <% else %>
    <%= link_to [topic, bookmark ,Favorite.new], class: 'btn btn-primary', method: :post do %>
      <i class="glyphicon glyphicon-star-empty"> </i>&nbsp; Favorite
    <% end %>
  <% end %>
</div>